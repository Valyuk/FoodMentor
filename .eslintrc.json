{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", "tab"],
    "space-infix-ops": ["error", { "int32Hint": false }],
    "quotes": ["error", "single"],
    "no-var": "error",
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "eqeqeq": ["error", "smart"],
    "no-console": "error",
    "no-cond-assign": "error",
    "no-extra-semi": "error",
    "no-inline-comments": "error",
    "no-else-return": ["error", { "allowElseIf": false }],
    "curly": "error"
  }
}
